<%- include ../layouts/header.ejs %>

    <% if (messages.error) { %>
        <p style="color:red">
            <%- messages.error %>
        </p>
        <% } %>

            <% if (messages.success) { %>
                <p style="color:green">
                    <%- messages.success %>
                </p>
                <% } %>

                    <form action="/users/edit/<%= message.data.id %>" method="post" name="form1">
                        <table width="25%" border="0">
                            <tr>
                                <td>Name</td>
                                <td>
                                    <input type="text" name="name" id="name" value="<%= message.data.name %>" />
                                </td>
                            </tr>
                            <tr>
                                <td>Age</td>
                                <td>
                                    <input type="text" name="age" value="<%= message.data.age %>" />
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <input type="text" name="email" value="<%= message.data.email %>" />
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="submit" name="Submit" value="Save" />
                                    <a href="/users">Back</a>
                                </td>
                            </tr>
                        </table>
                        <input type="hidden" name="_method" value="PUT" />
                    </form>

                    <%- include ../layouts/footer.ejs %>