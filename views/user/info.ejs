<%- include ../layouts/header.ejs %>

    <% if (messages.error) { %>
        <p style="color:red">
            <%- messages.error %>
        </p>
        <% } %>

            <% if (messages.success) { %>
                <p style="color:green">
                    <%- messages.success %>
                </p>
                <% } %>

                    <% if (message.data) { %>
                        <% message.data.forEach(function(user){ %>
                            <p>
                                <b>Name:</b>
                                <%= user.name %>
                            </p>
                            <p>
                                <b>Age:</b>
                                <%= user.age %>
                            </p>
                            <p>
                                <b>Email:</b>
                                <%= user.email %>
                            </p>
                            <center>
                                <a href='/users/edit/<%= user.id %>'>Edit</a> &nbsp;
                                <a href="/users">Back</a>
                            </center>
                            <%}) %>
                                <%} %>

                                    <%- include ../layouts/footer.ejs %>